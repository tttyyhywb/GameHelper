<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <include layout="@layout/divide_line"/>

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <ImageView
                android:id="@+id/img_hero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#e0000000"
                android:scaleType="fitXY"
                android:src="@drawable/default_hero" />

            <TextView
                android:id="@+id/tv_is_mvp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="#B0000000"
                android:text="mvp"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/main_list_text_size"
                android:textStyle="bold"
                android:visibility="invisible" />

            <TextView
                android:gravity="right"
                android:id="@+id/tv_hero_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:background="#38000000"
                android:text="10"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/main_list_text_size"
                android:paddingRight="5dp"/>

        </FrameLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_user_id"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="卡通图区"
                android:textSize="@dimen/main_list_text_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_kda_percent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="KDA:"
                    android:textSize="@dimen/main_list_text_size" />

                <TextView
                    android:id="@+id/tv_kda_main"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="11/5/6"
                    android:textSize="@dimen/main_list_text_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_damage_precent"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="16.9%"
                    android:textSize="@dimen/main_list_text_size" />

                <TextView
                    android:id="@+id/tv_damage"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="11611"
                    android:textSize="@dimen/main_list_text_size" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_item0"
                    android:layout_margin="3dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e0000000"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/img_item1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e0000000"
                    android:layout_margin="3dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/img_item2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e0000000"
                    android:layout_margin="3dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_item3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e0000000"
                    android:layout_margin="3dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/img_item4"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e0000000"
                    android:layout_margin="3dp"
                    android:scaleType="fitXY" />

                <ImageView
                    android:id="@+id/img_item5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#e0000000"
                    android:layout_margin="3dp"
                    android:scaleType="fitXY" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_user_portrait"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:background="#e0000000"
            android:layout_margin="5dp"
            android:scaleType="fitXY" />

    </LinearLayout>
</LinearLayout>