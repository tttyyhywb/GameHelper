<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:background="@color/title_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_detail_title"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/preview_title_text_size"
                android:textColor="@color/grew_text_with_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/duration_time"/>

            <TextView
                android:textColor="@color/white_text_with_alpha"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/detail_title_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_duration_time"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/preview_title_text_size"
                android:textColor="@color/grew_text_with_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/level"/>

            <TextView
                android:textColor="@color/white_text_with_alpha"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/detail_title_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_level"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/preview_title_text_size"
                android:textColor="@color/grew_text_with_alpha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/competation_type"/>

            <TextView
                android:textColor="@color/white_text_with_alpha"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/detail_title_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_competation_type"/>
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_match_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>


